<div class="shipping-bar-template" {% if section.settings.bg_color != blank %}style="background-color: {{ section.settings.bg_color }}"{% endif %}>
  <div class="page-width">
    <div class="grid">
      {% for i in (1..4) %}
      {% capture title %}title{{ i }}{% endcapture %}
      {% capture text %}text{{ i }}{% endcapture %}
      {% capture img %}logo{{ i }}{% endcapture %}
      <div class="grid__item grid__item{{ i }} medium-up--one-quarter">
        {% comment %}
        {% if section.settings[img] != blank %}
        	<img src="{{ section.settings[img] | img_url: '50x' }}" class="logo-img-{{ img }}">
        {% endif %}
        {% endcomment %}

        {% if img == 'logo1' %}
        	{% include 'main-icon-return' %}
        {%elsif img == 'logo2' %}
       	{% include 'main-icon-dispatch' %}
        {%elsif img == 'logo3' %}
        {% include 'main-icon-shipping' %}
        {% else %}
        {% include 'main-icon-pay' %}
        {% endif %}


        <div class="main-text__text">
          {% if section.settings[title] != blank %}
          <p class="main-text_heading">{{ section.settings[title] }}</p>
          {% endif %}
          {% if section.settings[text] != blank %}
            {{ section.settings[text] }}
          {% endif %}

        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>

{% if section.settings.txt_color != blank %}
{% capture id %}#shopify-section-{{ section.id }}{% endcapture %}
  <style>
    {{ id }} .shipping-bar-template .grid__item .main-text__text p {
      color: {{ section.settings.txt_color }};
    }
    {{ id }} .shipping-bar-template .grid__item svg{
      fill:{{ section.settings.txt_color }};
    }

  </style>
{% endif %}

