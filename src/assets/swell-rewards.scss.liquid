	background: $colorDarkBlack;
	top: 0;
	left: 0;
	right: 0;
	z-index: 9;
	display: -webkit-box;
	display: -moz-box;
	display: -ms-flexbox;
	display: -webkit-flex;
	-webkit-transition: all 0.3s;
	-moz-transition: all 0.3s;
	transition: all 0.3s;
	display: none;
	-webkit-align-items: center;
	-moz-align-items: center;
	-ms-align-items: center;
	align-items: center;
	-webkit-justify-content: center;
	-moz-justify-content: center;
	-ms-justify-content: center;
	justify-content: center;
	-ms-flex-pack: center;
	width: 100%;
	height: 100%; 
	.swell-referral-copy-content {
		position: relative;
		width: 100%;
		height: 100%;
		text-align: center;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0 15px;
		.swell-referral-copy-main {
			width: 100%;
			background: $colorDarkBlack;
			.swell-referral-heading {
				display: none;
			}
			.swell-referral-form-wrapper {
				.swell-referral-copy-link {
					font-size: 20px;
					font-style: italic;
					color: $colorYellow;
					line-height: 1;
					font-weight: 900;
					text-transform: uppercase;
					margin: 0 auto 30px;
					font-family: $theme-font-family-drukwide;
					@media($min: $small) {
						font-size: 30px;
					}
				}
				.swell-referral-copy-button {
					text-transform: uppercase;
					padding: 15px 12px;
					min-width: 150px;
					color: $colorDarkBlack;
					font-size: 14px;
					font-style: italic;
					font-weight: 900;
					border: 1px solid $colorYellow;
					font-family: $theme-font-family-drukwide;
					background-color: $colorYellow;
				}
				.swell-referral-details {
					font-size: 14px !important;
					color: $colorWhite !important;
					@media($min: $small) {
						font-size: 16px !important;
					}
				}
			}
		}
	}
}
